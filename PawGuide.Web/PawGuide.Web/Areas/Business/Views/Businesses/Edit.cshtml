@using PawGuide.Web
@model PublishBusinessFormModel

@{
    ViewData["Title"] = "Edit Business";
}

@await Html.PartialAsync("_HeadingPartial")

<div class="row text-center">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post">
            <h3>Edit This Business</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<TypeBusiness>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WebPageUrl"></label>
                <input asp-for="WebPageUrl" class="form-control" />
                <span asp-validation-for="WebPageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LatLocation"></label>
                <input asp-for="LatLocation" class="form-control" />
                <span asp-validation-for="LatLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LngLocation"></label>
                <input asp-for="LngLocation" class="form-control" />
                <span asp-validation-for="LngLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="PetType"></label>
                    <select asp-for="PetType" asp-items="Html.GetEnumSelectList<PetType>()" class="form-control"></select>
                    <span asp-validation-for="PetType" class="text-danger"></span>*@
                <label asp-for="PetTypes"></label>
                @*@foreach (var enumValue in Enum.GetValues(typeof(PetType)).Cast<PetType>())
                    {
                        <input type="checkbox" name="@nameof(PetType)" value="@((int)enumValue)" /> @: @enumValue.ToDisplayName()
                    }*@
                <br />
                <input type="checkbox" name="PetTypes" value="@((int)PetType.SmallBreedDog)" /> SmallBreedDog
                <input type="checkbox" name="PetTypes" value="@((int)PetType.AllDogs)" /> AllDogs
                <input type="checkbox" name="PetTypes" value="@((int)PetType.Cat)" /> Cats
                <input type="checkbox" name="PetTypes" value="@((int)PetType.OtherType)" /> OtherType
                <span asp-validation-for="PetTypes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PicUrl"></label>
                <input asp-for="PicUrl" class="form-control" />
                <span asp-validation-for="PicUrl" class="text-danger"></span>
            </div>

            @if (User.IsInRole(WebConstants.ModeratorRole) || User.IsInRole(WebConstants.AdministratorRole))
            {
                <div class="form-group">
                    <label asp-for="IsApproved"></label>
                    @Html.RadioButtonFor(m => m.IsApproved, true) Yes
                    @Html.RadioButtonFor(m => m.IsApproved, false) No
                    <span asp-validation-for="IsApproved" class="text-danger"></span>
                </div>
            }

            <button type="submit" class="btn btn-default">Edit</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

}