@model BusinessListingViewModel
@{
    ViewData["Title"] = "Pet Friendly";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>@ViewData["Title"]</li>
                </ul>

            </div>
        </div>
    </div>
</div>

<div id="content">
    <div class="container">
        <div class="row">
            <!-- *** LEFT COLUMN ***
            _________________________________________________________ -->

            <div class="col-md-9" id="blog-listing-small">
                
                <div class="row">

                    @foreach (var business in Model.Businesses)
                    {
                        if (business.IsApproved == true || business.Author == User.Identity.Name)
                        {
                            <div class="col-md-4 col-sm-6">
                                <div class="box-image-text blog">
                                    <div class="top">
                                        <div class="image">
                                            <img src="@business.PicUrl" alt="" class="img-responsive">
                                            @if (business.IsApproved == false)
                                            {
                                                <img src="https://barmakapproved.files.wordpress.com/2012/07/notapproved.png" />
                                            }
                                        </div>
                                        <div class="bg"></div>
                                        <div class="text">
                                            <p class="buttons">
                                                <a asp-action="Details" asp-route-id="@business.Id" asp-route-title="@business.Name.ToFriendlyUrl()" class="btn btn-template-transparent-primary">
                                                    <i class="fa fa-link"></i> 
                                                    Read more
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="content">
                                        <h4>
                                            <a asp-action="Details" asp-route-id="@business.Id" asp-route-title="@business.Name.ToFriendlyUrl()">
                                                @business.Name
                                            </a>
                                        </h4>
                                        <p class="author-category">
                                            By
                                            @business.Author
                                            on 
                                            @business.PublishDate.ToShortDateString()
                                        </p>
                                        <p class="text-center">
                                            @{
                                                var businessIndex = business.Type.GetHashCode();
                                                var businessType = Model.Type(businessIndex);
                                                var petIndex = business.PetType.GetHashCode();
                                                var petType = Model.PetType(petIndex);
                                            }

                                            Type of place: @Html.DisplayFor(model => businessType)
                                            <br/>
                                            City: @business.City
                                            <br/>
                                            Pets Alowed: @Html.DisplayFor(model => petType)
                                        </p>
                                        <p class="read-more">
                                            <a asp-action="Details" asp-route-id="@business.Id" asp-route-title="@business.Name.ToFriendlyUrl()" class="btn btn-template-main">
                                                Continue reading
                                            </a>
                                        </p>
                                    </div>
                                </div>
                                <!-- /.box-image-text -->

                            </div>

                            @*<li class="list-group-item">
                                    <img src="@business.PicUrl" alt="Sample Image" width="300px" />
                                    <a asp-action="Details" asp-route-id="@business.Id" asp-route-title="@business.Name.ToFriendlyUrl()">
                                        @business.Name
                                    </a>
                                    <br />
                                    <p>
                                        @{
                                            var businessIndex = business.Type.GetHashCode();
                                            var businessType = Model.Type(businessIndex);
                                            var petIndex = business.PetType.GetHashCode();
                                            var petType = Model.PetType(petIndex);
                                        }
                                        <h3>
                                            @Html.DisplayFor(model => businessType)
                                        </h3>
                                        @business.City
                                        <h3>
                                            @Html.DisplayFor(model => petType)
                                        </h3>
                                        @business.LatLocation
                                        @business.LngLocation
                                    </p>
                                    <small>published by @business.Author on @business.PublishDate.ToShortDateString()</small>

                                    @if (business.IsApproved == false)
                                    {
                                        <img src="https://barmakapproved.files.wordpress.com/2012/07/notapproved.png" />
                                    }
                                </li>*@
                        }
                    }

                </div>
            @if (Model.TotalBusinesses > Model.Businesses.Count())
            {
                <ul class="pager">
                    <li class="@(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
                        <a asp-route-page="@Model.PreviousPage" aria-label="Previous">
                            <span aria-hidden="true">
                                &larr; Older
                            </span>
                        </a>
                    </li>
                    <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
                        <a asp-route-page="@Model.NextPage" aria-label="Next">
                            <span aria-hidden="true">
                                Newer &rarr;
                            </span>
                        </a>
                    </li>
                </ul>
            }
            </div>
            <!-- /.col-md-9 -->

            <!-- *** LEFT COLUMN END *** -->
        </div>
    </div>
</div>


