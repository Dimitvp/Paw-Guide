                                                    </div>

                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                               
                                @if (User.IsInRole(WebConstants.AdministratorRole) || User.IsInRole(WebConstants.ModeratorRole))
                                {
                                    <li class="dropdown">
                                        <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown">Moderator Panel <b class="caret"></b></a>
                                        <ul class="dropdown-menu">

                                            @if (User.IsInRole(WebConstants.AdministratorRole))
                                            {
                                                <li>
                                                    <a asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a>
                                                </li>
                                            }
                                            <li><a asp-area="Business" asp-controller="Businesses" asp-action="ForApproval">Moderat Businesses</a></li>
                                            <li><a asp-area="Publications" asp-controller="Ads" asp-action="ForApproval">Moderat Ads</a></li>
                                            <li><a asp-area="Publications" asp-controller="Articles" asp-action="Create">Create Article</a></li>
                                        </ul>
                                    </li>
                                }

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="dropdown">
                                        <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown">Create <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a asp-area="Business" asp-controller="Businesses" asp-action="Create">Add Business</a>
                                            </li>
                                            <li>
                                                <a asp-area="Publications" asp-controller="Ads" asp-action="Create">Create Ads</a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                            </ul>

                        </div>
                        <!--/.nav-collapse -->

                        <div class="collapse clearfix" id="search">

                            <form class="navbar-form" role="search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <span class="input-group-btn">

                                        <button type="submit" class="btn btn-template-main"><i class="fa fa-search"></i></button>

                                    </span>
                                </div>
                            </form>

                        </div>
                        <!--/.nav-collapse -->

                    </div>

                </div>
                <!-- /#navbar -->

            </div>

            <!-- *** NAVBAR END *** -->
        </header>
    @{
        if (TempData.ContainsKey(WebConstants.TempDataSuccessMessageKey))
        {
            <div class="text-center+">
                <div class="alert alert-success text-center fade show" role="alert" id="my-elert">
                    <strong>@TempData[WebConstants.TempDataSuccessMessageKey]</strong>
                </div>
            </div>
        }
        else if (TempData.ContainsKey(WebConstants.TempDataWarningMessageKey))
        {
            <div class="text-center">
                <div class="alert alert-warning text-center fade show" role="alert">
                    <strong>@TempData[WebConstants.TempDataWarningMessageKey]</strong>
                </div>
            </div>
        }
        else if (TempData.ContainsKey(WebConstants.TempDataDangerMessageKey))
        {
            <div class="text-center">
                <div class="alert alert-danger text-center fade show" role="alert">
                    <strong>@TempData[WebConstants.TempDataDangerMessageKey]</strong>
                </div>
            </div>
        }
    }
